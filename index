<div id="container">
  <img src="https://i.pinimg.com/originals/02/86/d2/0286d2d14e7d5c55ea4fc64da3a7ec87.gif" alt="Imagen de taquitos">
  <div id="invitation-header">¿Quieres comer taquitos conmigo?</div>
  <button id="green-button" onclick="showPopup()">Sí, quiero amor</button>
  <button id="red-button" onmouseover="moveButton()">No, gracias</button>
</div>

<script>
  function showPopup() {
    alert("Entonces te espero el miércoles a las 4 pm en mi casa, y no te preocupes, yo te llevo de vuelta a tu casa, bebé.");
  }

  function moveButton() {
    var redButton = document.getElementById("red-button");
    var container = document.getElementById("container");

    var maxX = container.clientWidth - redButton.clientWidth;
    var maxY = container.clientHeight - redButton.clientHeight;

    var newX = Math.floor(Math.random() * maxX);
    var newY = Math.floor(Math.random() * maxY);

    redButton.style.left = newX + "px";
    redButton.style.top = newY + "px";
  }
</script>

</body>
